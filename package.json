{
  "name": "tippy.js",
  "version": "3.4.1",
  "description": "Vanilla JS Tooltip & Popover Library",
  "main": "dist/tippy.all.js",
  "module": "dist/esm/tippy.standalone.js",
  "types": "index.d.ts",
  "author": "atomiks",
  "license": "MIT",
  "keywords": [
    "tooltip",
    "popover",
    "tippy",
    "tippy.js"
  ],
  "files": [
    "dist",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomiks/tippyjs.git"
  },
  "scripts": {
    "dev": "parcel demo/index.html -d .devserver --open",
    "build": "node rollup.build.js && bundlesize",
    "test": "jest --coverage",
    "lint": "eslint --fix \"src/**/*.js\"",
    "format": "prettier --write \"{src,test}/**/*{js,scss}\"",
    "release": "npm test && npm run build && git add . && git commit -am $npm_package_version && git tag v$npm_package_version && git push origin master && git push --tags && npm publish"
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "testRegex": "./test/.*.test.js$"
  },
  "browserslist": [
    "> 0.5%"
  ],
  "bundlesize": [
    {
      "path": "./dist/tippy.all.min.js",
      "maxSize": "15 kB"
    },
    {
      "path": "./dist/tippy.css",
      "maxSize": "2 kB"
    }
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,test}/**/*.{js,json,scss,md}": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^6.7.7",
    "babel-core": "^6.26.3",
    "babel-jest": "^22.4.4",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015-rollup": "^3.0.0",
    "babel-preset-stage-2": "^6.24.1",
    "bundlesize": "^0.17.0",
    "colorette": "^1.0.7",
    "cssnano": "^3.10.0",
    "eslint": "^5.12.0",
    "eslint-config-prettier": "^3.6.0",
    "jest": "^23.5.0",
    "node-sass": "^4.10.0",
    "parcel-bundler": "^1.10.3",
    "postcss": "^5.2.18",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "prettier": "^1.15.3",
    "rollup": "^0.55.5",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-babel-minify": "^4.0.0",
    "rollup-plugin-commonjs": "^8.4.1",
    "rollup-plugin-css-only": "^0.2.0",
    "rollup-plugin-json": "^2.3.1",
    "rollup-plugin-node-resolve": "^3.2.0",
    "rollup-plugin-sass": "^0.4.10"
  },
  "dependencies": {
    "popper.js": "^1.14.6"
  }
}
